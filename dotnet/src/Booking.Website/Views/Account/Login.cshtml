@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "Master";
}

@model Booking.Website.Models.LoginModel

<div class="fullsize bg-primary center">
    <form asp-controller="account" asp-action="login" 
        asp-route-returnurl="@ViewData["ReturnUrl"]"
        class="qtrwidth columns" method="post">

        <div class="fullwidth center">
            <input type="email" class="fullwidth" name="Email" placeholder="Email" />
        </div>
        <div class="fullwidth center">
            <input type="password" class="fullwidth" name="Password" placeholder="Password" />
        </div>
        <div class="fullwidth center">
            <label for="Remember Me" class="fg-light">Remember Me</label>
            <input type="checkbox" name="RememberMe" value="true" />
        </div>

        <div class="fullwidth"></div>

        <button type="submit" class="button bg-dark fg-light fullwidth">Login</button>
    </form>
</div>